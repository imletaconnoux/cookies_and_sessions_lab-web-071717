
<h1>Current Cart:</h1>
<% if cart == 0 %>
  <p>You cart is currently empty<p>
<% else %>
<% cart.each do |product| %>
  <%= product %>
<% end %>
<br>
<% end %>

<%= form_tag '/' do %>
  <label> New Product Name: </label><br>
  <%= text_field_tag :product %><br>
  <%= submit_tag 'add to cart' %>
<% end %>
